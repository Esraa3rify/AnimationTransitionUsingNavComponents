<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".QuizFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="86.25dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/shareEmailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Sharing email passwords"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.041" />


    <Button
        android:id="@+id/proceedBtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="108dp"
        android:text="Proceed"
        android:textAllCaps="false"
        android:textColor="#000060"

        android:textSize="36sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareEmailTV" />

    <Button
        android:id="@+id/anotherTopicBtn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="Choose another topic"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="260dp"
        app:strokeWidth="10dp"
        app:strokeColor="#ffffff"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/shareEmailTV"
        />



    <TextView
        android:id="@+id/vectorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can wave your hand to start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proceedBtn"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="70dp"
        tools:layout_editor_absoluteY="395dp" />

    <ImageView
        android:id="@+id/vector"
        android:layout_width="18dp"
        android:layout_height="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@+id/vectorTV"
        app:srcCompat="@drawable/ic_baseline_back_hand_24"
        tools:ignore="MissingConstraints" />







</androidx.constraintlayout.widget.ConstraintLayout>